<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CentralDeInformacoes">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/custom_bottom_nav" />

    <LinearLayout
        android:id="@+id/custom_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:padding="8dp"
        android:elevation="8dp"
        android:gravity="center"
        android:weightSum="5">

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/bg_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_nav_selected_background"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/icon_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <!-- TREINOS -->
        <LinearLayout
            android:id="@+id/nav_treinos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/bg_treinos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_nav_selected_background"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/icon_treinos"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_peso"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <!-- MAPEAMENTO -->
        <LinearLayout
            android:id="@+id/nav_mapeamento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/bg_mapeamento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_nav_selected_background"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/icon_mapeamento"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mapeamento"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <!-- PERFIL -->
        <LinearLayout
            android:id="@+id/nav_perfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/bg_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_nav_selected_background"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/icon_perfil"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_perfil"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <!-- CONFIG -->
        <LinearLayout
            android:id="@+id/nav_config"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/bg_config"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_nav_selected_background"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/icon_config"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_config"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>