<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#3A3939"
    app:cardCornerRadius="6dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageViewOverlayExercicioMidia"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/perna" /> <TextView
        android:id="@+id/textViewOverlayExercicioNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="#E0E0E0"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewOverlayExercicioMidia"
        app:layout_constraintTop_toTopOf="@+id/imageViewOverlayExercicioMidia"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Nome do Exercício" />

        <TextView
            android:id="@+id/textViewOverlayExercicioSeriesReps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#C0C0C0"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textViewOverlayExercicioNome"
            app:layout_constraintTop_toBottomOf="@+id/textViewOverlayExercicioNome"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Séries: 3, Repetições: 10-12" />

        <TextView
            android:id="@+id/textViewOverlayExercicioDescMaster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#B0B0B0"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewOverlayExercicioMidia"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Descrição detalhada de como realizar o exercício e quais músculos são trabalhados."
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/textViewOverlayExercicioObservacoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#A8A8A8"
            android:textSize="13sp"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/textViewOverlayExercicioDescMaster"
            app:layout_constraintTop_toBottomOf="@+id/textViewOverlayExercicioDescMaster"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Obs: Manter a postura correta."
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>