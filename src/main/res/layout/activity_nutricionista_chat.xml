<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nutricionista_chat">

    <ImageButton
        android:id="@+id/botaoVoltarNutriChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/redondo_laranja"
        android:src="@drawable/ic_left"
        android:contentDescription="Voltar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/avatarNutricionista"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/nutri"
        app:layout_constraintTop_toTopOf="@id/botaoVoltarNutriChat"
        app:layout_constraintBottom_toBottomOf="@id/botaoVoltarNutriChat"
        app:layout_constraintStart_toEndOf="@id/botaoVoltarNutriChat"/>

    <TextView
        android:id="@+id/nomeNutricionista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ar_one_sans_bold"
        android:text="Arthur Morgan"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/avatarNutricionista"
        app:layout_constraintBottom_toBottomOf="@id/avatarNutricionista"
        app:layout_constraintStart_toEndOf="@+id/avatarNutricionista"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMensagensNutri"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/botaoVoltarNutriChat"
        app:layout_constraintBottom_toTopOf="@+id/layoutInputNutri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layoutInputNutri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D5D3D3"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editTextMensagemNutri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:hint="Digite sua mensagem para Arthur"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/botaoEnviarNutri"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Enviar"
            android:src="@android:drawable/ic_menu_send"
            app:tint="@color/design_default_color_primary"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>